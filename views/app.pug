            .carta-materia-info
                .carta-materia-info-datos
                    p.dato-uno= `${dato.prof}`
                    p.dato-dos= `${dato.cartas} carta(s)`
                p.item= dato.logo
    else
        .contenedor
            h1 No hay materias creadas todav√≠a
