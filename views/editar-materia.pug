include ./templates/head.pug

body
    include ./templates/header.pug
    .contenedor
        .carta-materia#tarjeta
                h3#titulo= datos.materia
                .carta-materia-info
                    .carta-materia-info-datos
                        p.dato-uno#prof= datos.prof
                        p.dato-dos= `${datos.cartas} carta(s)`
                    p.item= datos.logo
        .contenedor-campo
            h3.titulo-contenedor Editar Materia
            form.formulario-materia(action=`/materia/${datos.id}` method="PUT")
                input(type="text" placeholder="TÃ­tulo:" name="materia" required autocomplete="off" value=`${datos.materia}` ) 
                input(type="text" placeholder="Prof. (opcional)" name="prof" autocomplete="off" value=`${datos.prof}`)
                input(type="hidden" name="id" value=`${datos.id}`)
                input.input-logo#logo(max-length="8" type="text" placeholder="Emoji :D" name="logo" required autocomplete="off" value=`${datos.logo}`)
                .caja-inferior
                    select#seleccionador-color(name="color" required)
                        option(selected value=`${datos.color}`) Anterior
                        each color, index in colores
                            option(value=`${color}` name="color")= `Color ${index + 1}` 
                    input#enviar(type="submit" value="Editar")

    script(src="/js/editar-materia.js")